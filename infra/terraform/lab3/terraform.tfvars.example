# Database endpoints from Lab 2 outputs
database_endpoint = "practicas-postgres.cxxxxxxxx.us-east-1.rds.amazonaws.com"
database_port     = 5432
database_name     = "practicas_db"
database_user     = "postgres"
database_password = "SecurePassword123!"

# Redis endpoint from Lab 2 outputs
redis_endpoint = "practicas-redis.xxxxxxxx.ng.0001.use1.cache.amazonaws.com"
redis_port     = 6379

# ASG scaling configuration
asg_min     = 2
asg_max     = 4
asg_desired = 2
