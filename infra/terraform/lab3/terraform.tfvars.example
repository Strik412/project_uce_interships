aws_region = "us-east-1"

# From Lab 1 outputs
subnet_ids = [
  "subnet-xxxxxxxx",
  "subnet-yyyyyyyy"
]
app_security_group_id = "sg-app-xxxxxxxx"

# EC2 instance type
instance_type = "t3.micro"

# ECR registry URL (format: <account-id>.dkr.ecr.us-east-1.amazonaws.com)
ecr_registry_url = "123456789012.dkr.ecr.us-east-1.amazonaws.com"

# Target group ARNs from Lab 2 outputs
target_group_arns = {
  "web"                          = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-web-tg/abc123def456"
  "api-gateway"                  = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-api-gateway-tg/abc123def456"
  "auth-service"                 = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-auth-service-tg/abc123def456"
  "registration-service"         = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-registration-service-tg/abc123def456"
  "user-management"              = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-user-management-tg/abc123def456"
  "communication-service"        = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-communication-service-tg/abc123def456"
  "notification-service"         = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-notification-service-tg/abc123def456"
  "document-management-service"  = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-document-management-service-tg/abc123def456"
  "reporting-service"            = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-reporting-service-tg/abc123def456"
  "tracking-service"             = "arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/practicas-tracking-service-tg/abc123def456"
